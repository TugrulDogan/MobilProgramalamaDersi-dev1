<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="3">

</LinearLayout>

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/users"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Users"
            android:padding="5dp"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainTop_toTopOf="parent"/>

        <Button
            android:id="@+id/soruekle"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Soru Ekle"
            android:padding="5dp"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainTop_toTopOf="parent"/>

        <Button
            android:id="@+id/sorulistele"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Soru Listele"
            android:padding="5dp"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainTop_toTopOf="parent"/>

        <Button
            android:id="@+id/sinavolustur"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Snav Olustur"
            android:padding="5dp"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainTop_toTopOf="parent"/>

        <Button
            android:id="@+id/sinavayarlari"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Sınav Ayarları"
            android:padding="5dp"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainTop_toTopOf="parent"
            />
    </LinearLayout>
</LinearLayout>